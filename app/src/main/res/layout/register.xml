<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F9E9">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginTop="56dp"
        android:gravity="center"
        android:text="Register"
        android:textColor="#E3655B"
        android:textFontWeight="800"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp">

    </TextView>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginTop="96dp"
        android:gravity="center"
        android:text="Create New Account"
        android:textColor="#E3655B"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp">

    </TextView>

    <EditText
        android:id="@+id/username"
        android:layout_width="380sp"
        android:layout_height="75sp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="100dp"
        android:drawableStart="@drawable/baseline_person_24"
        android:hint="Username"
        android:background="@drawable/edittextrect"
        android:textColorHint="@color/gray"
        android:inputType="text"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/textView2"

        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="5dp" />

    <EditText
        android:id="@+id/email"
        android:layout_width="350sp"
        android:layout_height="75sp"
        android:layout_marginTop="124dp"
        android:drawableStart="@drawable/baseline_email_24"
        android:hint="Email"
        android:textColorHint="@color/gray"
        android:backgroundTint="@color/text_color"
        android:textColor="@color/black"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@+id/textView2"

        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="5dp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="400sp"
        android:layout_height="75sp"
        android:layout_marginTop="232dp"
        android:drawableStart="@drawable/baseline_lock_24"
        android:hint="Password"
        android:textColorHint="@color/gray"
        android:maxLines="1"
        android:backgroundTint="@color/text_color"
        android:textColor="@color/black"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@+id/textView2"

        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="5dp">


    </EditText>

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/toggleHostel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/buttonGroup"
        app:layout_constraintBottom_toTopOf="@+id/register_submit"
        android:layout_marginBottom="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password">

        <Button
            android:id="@+id/button55"
            android:backgroundTint="#FFFFFFFF"
            android:textColor="#E3655B"
            android:background="@drawable/roundstyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="55" />

        <Button
            android:id="@+id/button57"
            android:backgroundTint="#FFFFFFFF"
            android:textColor="#E3655B"
            android:background="@drawable/roundstyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="57" />

        <Button
            android:id="@+id/button59"
            android:backgroundTint="#FFFFFFFF"
            android:textColor="#E3655B"
            android:background="@drawable/roundstyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="59" />
    </LinearLayout>

    <Button

        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:text="Back"
        android:textColor="#E3655B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password"
        app:layout_constraintVertical_bias="0.743"
        tools:ignore="MissingConstraints">

    </Button>

    <Button
        android:id="@+id/register_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="136dp"
        android:background="@drawable/roundstyle"
        android:backgroundTint="#E3655B"
        android:text="Register"
        android:paddingLeft="100dp"
        android:paddingRight="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>