<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoadingScreen"
    android:orientation="vertical"
    android:background = "@color/loadscreenbg">

    <ImageView
        android:id="@+id/loadscreenimg1"
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:background="@drawable/loadscreenimg1" />

    <TextView
        android:id="@+id/loadscreentext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop = "20pt"
        android:text="Discover the crowd in a room with just a few taps"
        android:textColor="@color/loadtextcolor"
        android:textSize="16sp"
        android:typeface="sans" />

    <Button
        android:id="@+id/getstartedbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/roundstyle"
        android:backgroundTint="@color/loadtextcolor"
        android:layout_marginTop="40dp"
        android:paddingLeft="40pt"
        android:paddingRight="40pt"
        android:text="Get Started!"
        android:typeface="sans" />

</LinearLayout>